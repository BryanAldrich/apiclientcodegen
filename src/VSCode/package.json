{
  "name": "rapicgen-vscode",
  "displayName": "REST API Client Code Generator",
  "description": "Generate code from OpenAPI specifications",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rapicgen-vscode.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rapicgen-vscode.helloWorld",
        "title": "Hello World"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "rapicgen-vscode.menu",
          "when": "resourceExtname == .json || resourceExtname == .yaml || resourceExtname == .yml",
          "group": "rapicgen-vscode.rootMenu"
        }
      ],
      "rapicgen-vscode.menu":[
        {
          "command":"rapicgen-vscode.helloWorld",
          "group":"rapicgen-vscode.rootMenu"
        }        
      ]      
    },
    "submenus": [
      {
        "label": "REST API Client Code Generator",
        "id": "rapicgen-vscode.menu"
      }
    ]    
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
